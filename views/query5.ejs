    <div class="d-flex justify-content-center query-section">
        <div class="row search-row">

            <div class="col-4 d-flex justify-content-center">
                <div class="card query-selectors">
                    <div class="card-body">
                        <h5 class="card-title text-center">Average Square Footage Per Year by City</h5>
                        <p class="card-text">Search by city to view a scatterplot graph of average square footage
                            over a
                            range of years.</p>

                        <form action="/query5" method="POST">
                            <div class="mb-3">
                                <label for="startingYear" class="form-label">Starting Year</label>
                                <select class="form-select" aria-label="startingYear" id="startingYear"
                                    name="startingYear">
                                    <option value="2010">2010</option>
                                    <option value="2011">2011</option>
                                    <option value="2012">2012</option>
                                    <option value="2013">2013</option>
                                    <option value="2014">2014</option>
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="endingYear" class="form-label">Ending Year</label>
                                <select class="form-select" aria-label="endingYear" id="endingYear" name="endingYear">
                                    <option value="2010">2010</option>
                                    <option value="2011">2011</option>
                                    <option value="2012">2012</option>
                                    <option value="2013">2013</option>
                                    <option value="2014">2014</option>
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" name="city" aria-describedby="city">
                            </div>

                            <button type="submit" class="btn btn-primary">Graph Query</button>
                        </form>
                    </div>
                </div>
            </div>