<%- include('query4') %>

    <div class="col-8 d-flex justify-content-center">
        <div class="chart-container" style="position: relative; height:30vh; width:40vw">
            <canvas id="myChart"></canvas>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            let yearsArray = '<%= years %>'.split(',');
            let dataArray = '<%= rentDiff %>'.split(',');

            const data = {
                labels: yearsArray,
                datasets: [{
                    label: '<%= mostExpensiveCity %> - <%= cheapestCity %>',
                    backgroundColor: 'rgb(0, 106, 255)',
                    borderColor: 'rgb(0, 106, 255)',
                    data: dataArray,
                }]
            };

            const config = {
                type: 'line',
                data: data,
                options: {
                    plugins: {
                        title: {
                            display: true,
                            text: 'Average Difference in Most Expensive (<%= mostExpensiveCity %>) and Least Expensive (<%= cheapestCity %>) Cities in <%= state %> from <%= startingYear %> to <%= endingYear %>'
                        },
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Year'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Average Difference in Rent Price'
                            }
                        }
                    }
                }
            };
        </script>

        <script>
            const myChart = new Chart(
                document.getElementById('myChart'),
                config
            );
        </script>
    </div>

    </div>
    </div>